{
  "name": "status-bar-helper",
  "displayName": "Status Bar Helper",
  "description": "在 VS Code 狀態列建立自訂按鈕，支援 VS Code 與 Node.js API，並內建 Log、Git、Board 等可擴充範例腳本與可視化設定面板。",
  "version": "1.3.0",
  "publisher": "JiaHongL",
  "repository": {
    "type": "git",
    "url": "https://github.com/JiaHongL/status-bar-helper.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "icon": "media/icon.png",
  "categories": ["Other"],
  "tags": ["productivity", "status bar", "scripts", "automation"],
  "keywords": ["status bar", "script", "automation", "git", "webview", "node", "vscode api"],
  "galleryBanner": {
    "color": "#1f1f1f",
    "theme": "dark"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Runs user-provided scripts."
    },
    "virtualWorkspaces": {
      "supported": false
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:statusBarHelper.showSettings"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "media/**",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.txt"
  ],
  "contributes": {
    "commands": [
      {
        "command": "statusBarHelper.showSettings",
        "title": "Status Bar Helper: Settings"
      }
    ],
    "configuration": {
      "title": "Status Bar Helper",
      "properties": {
        "statusBarHelper.showGearOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "啟動時在右下角顯示設定齒輪快捷。"
        },
        "statusBarHelper.items": {
          "type": "array",
          "default": [],
          "description": "要顯示在狀態列的項目列表（由設定面板管理）。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run copy-files && tsc -p ./",
    "copy-files": "cpx \"node_modules/@types/{node,vscode}/**/*\" out/typedefs",
    "watch": "tsc -watch -p ./",
    "build": "vsce package",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "cpx": "^1.5.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.39",
    "monaco-editor": "^0.52.2"
  }
}
