{
  "name": "status-bar-helper",
  "displayName": "%ext.displayName%",
  "description": "%ext.description%",
  "version": "1.10.2",
  "publisher": "JiaHongL",
  "repository": {
    "type": "git",
    "url": "https://github.com/JiaHongL/status-bar-helper.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "tags": [
    "productivity",
    "status bar",
    "scripts",
    "automation"
  ],
  "keywords": [
    "status bar",
    "script",
    "automation",
    "git",
    "webview",
    "node",
    "vscode api"
  ],
  "galleryBanner": {
    "color": "#1f1f1f",
    "theme": "dark"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Runs user-provided scripts."
    },
    "virtualWorkspaces": {
      "supported": false
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:sbh.container",
    "onView:statusBarHelper.primary",
    "onCommand:statusBarHelper.showSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "statusBarHelper.showSettings",
        "title": "%cmd.settings.title%"
      },
      {
        "command": "statusBarHelper.explorerAction",
        "title": "%cmd.explorerAction.title%"
      }
    ],
    "configuration": {
      "title": "%cfg.title%",
      "properties": {
        "statusBarHelper.showGearOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "%cfg.showGearOnStartup.desc%"
        },
        "statusBarHelper.items": {
          "type": "array",
          "default": [],
          "description": "%cfg.items.desc%"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sbhContainer",
          "title": "Status Bar Helper",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "sbhContainer": [
        {
          "id": "statusBarHelper.sidebar",
          "name": "Status Bar Helper",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "statusBarHelper.explorerAction",
          "group": "2_workspace@1",
          "when": "hasRegistrations"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "npm run init:all",
    "build:webview": "vite build",
    "init:all": "npm run update:codicons -- init && npm run update:monaco -- init",
    "update:all": "npm run update:codicons && npm run update:monaco",
    "generate:codicons": "node ./scripts/generate-codicon-list.mjs",
    "update:codicons:init": "npm run update:codicons -- init",
    "update:monaco:init": "npm run update:monaco -- init",
    "update:codicons": "node ./scripts/update-codicons.mjs",
    "update:monaco": "node ./scripts/update-monaco.mjs",
    "clean": "rm -rf ./out",
    "copy-files": "node ./scripts/copy-files.mjs",
    "compile": "npm run clean && npm run copy-files && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile && vsce package",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "vite": "^7.1.6",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "dependencies": {
    "@vscode/codicons": "0.0.40",
    "monaco-editor": "0.53.0"
  }
}
